<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
 <%= f.label :profile_image %><br>
  <%= f.file_field :profile_image, placeholder: "image", accept: "image/*" %> <br>
   <%= f.label :introduction %><br>
   <%= f.text_area :introduction, autofocus: true, id:"inputBody", placeholder:"Body"%> <br>
  <%= f.submit "Update User" %>
<% end %>